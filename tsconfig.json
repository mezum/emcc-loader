{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2017",
		"strict": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"outDir": "lib",
		"sourceMap": true,
		"moduleResolution": "node",
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts",
		"dist"
	]
}
